{
    "name": "invinbg/hyperf-http-message",
    "description": "A Hyperf extension for enhanced HTTP message handling, compatible with PSR-7/PSR-15 standards.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "InvinbgHyperf\\HttpMessage\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "hyperf/http-server": "~3.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "hyperf": {
            "config": "InvinbgHyperf\\HttpMessage\\ConfigProvider"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    }
}
